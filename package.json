{
  "name": "@react-mission-control/monorepo",
  "version": "1.0.1",
  "private": true,
  "description": "React Mission Control - macOS Mission Control-like experiences for web applications",
  "scripts": {
    "dev": "turbo run dev",
    "dev:lib": "turbo run dev --filter=react-mission-control",
    "dev:playground": "turbo run dev --filter=@react-mission-control/playground",
    "build": "turbo run build",
    "build:lib": "turbo run build --filter=react-mission-control",
    "build:playground": "turbo run build --filter=@react-mission-control/playground",
    "typecheck": "turbo run typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "test": "turbo run test",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=react-mission-control && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@changesets/cli": "^2.27.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "next": "^15.5.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@8.14.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
